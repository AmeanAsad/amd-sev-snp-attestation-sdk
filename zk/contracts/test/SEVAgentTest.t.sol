pragma solidity ^0.8.13;

import "./TestSetup.sol";
import "./SuccinctGroth16Setup.sol";
import "../src/SEVAgentAttestation.sol";

contract SEVAgentTest is TestSetup {
    address internal constant admin = address(1);

    bytes constant ARK_MILAN_DER =
        hex"";
    bytes constant ASK_MILAN_VCEK_DER =
        hex"";
    bytes32 SEV_IMAGE_RISCZERO_ID = vm.envBytes32("SEV_AGENT_RISCZERO_IMAGE_ID");

    SEVAgentAttestation attestation;

    function setUp() public override {
        super.setUp();

        vm.startPrank(admin);

        SuccinctGroth16Setup succinctGroth16Setup = new SuccinctGroth16Setup();
        bytes32 vk = 0x0000e024beed46a1ff7ae986500393a8c0f84921a0b95369b98e16295b0b05b6;
        ISP1Verifier sp1Verifier = ISP1Verifier(succinctGroth16Setup.setup());

        bytes[] memory vekCaChain = new bytes[](2);
        vekCaChain[0] = ASK_MILAN_VCEK_DER;
        vekCaChain[1] = ARK_MILAN_DER;
        kds.upsertVekCaChain(vekCaChain, hex"");

        attestation = new SEVAgentAttestation(
            address(kds)
        );

        ZkCoProcessorConfig memory riscZeroConfig = ZkCoProcessorConfig({
            programIdentifier: SEV_IMAGE_RISCZERO_ID,
            zkVerifier: address(riscZeroVerifier)
        });
        SEVAgentAttestation(attestation).setZkConfiguration(ZkCoProcessorType.RiscZero, riscZeroConfig);

        ZkCoProcessorConfig memory succinctConfig = ZkCoProcessorConfig({
            programIdentifier: vk,
            zkVerifier: address(sp1Verifier)
        });
        SEVAgentAttestation(attestation).setZkConfiguration(ZkCoProcessorType.Succinct, succinctConfig);

        vm.stopPrank();
    }

    function testSevAttestation() public view {
        bytes memory output =
            hex"";
        bytes memory proof =
            hex"";

        ZkOutput memory zkOutput = attestation.verifyAndAttestWithZKProof(output, ZkCoProcessorType.Succinct, proof);

        bytes memory riscZeroOutput =
            hex"";
        bytes memory riscZeroProof =
            hex"";

        ZkOutput memory riscZeroZkOutput = attestation.verifyAndAttestWithZKProof(riscZeroOutput, ZkCoProcessorType.RiscZero, riscZeroProof);
    }
}
